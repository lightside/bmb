<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<%= csrf_meta_tag %>
		<%= render 'layouts/stylesheets' %>
	</head>
	<body>
		<div class="container_16">
			<%= render 'layouts/header' %>
			<section id="content">
				<% flash.each do |key, value| %>
					<%= content_tag(:div, value, :class => "flash #{key} round") %>
				<% end %>
				<%= yield %>
			</section>
		</div>
		<hr class="hidden" />
		<%= render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>
	</body>
</html>
